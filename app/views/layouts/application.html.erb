<!DOCTYPE html>
<html>
<head>
  <title>Messageme</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">

    <% if flash[:error].present? %>
      <h2 class="error">
        <%= flash[:error] %>
      </h2>
    <% end %>

    <%= yield %>

  </div>
</body>
</html>
