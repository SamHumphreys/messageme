<h1>Login</h1>

<%= flash[:error] %>

<%= form_tag login_path do %>
  <p>
    <div class="user-left">
      <%= label_tag :email %>
    </div>
    <%= text_field_tag :email, '', :autofocus => true %>
  </p>
  <p>
    <div class="user-left">
      <%= label_tag :password %>
    </div>
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= submit_tag 'Login' %>
  </p>
<% end %>
